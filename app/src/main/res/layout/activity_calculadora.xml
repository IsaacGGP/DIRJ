<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculadoraRiesgo">


    <include
        android:id="@+id/include"
        layout="@layout/toolbarcalcular"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp" />

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="581dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/redondeado"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Llena los siguientes parámetros:"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Peso (kg)"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/peso"
                style="@style/Campo_texto_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="20dp"
                android:hint="Kg"
                android:padding="8dp"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="8dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:inputType="numberDecimal"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Nivel creatinina"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/creatinina"
                style="@style/Campo_texto_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="20dp"
                android:hint="mg/dL"
                android:padding="8dp"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="8dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:inputType="numberDecimal"/>



        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Marca las enfermedades que padezcas"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                android:text="Sedimiento urinario anormal"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/sedimientourinario"
                android:layout_width="73dp"
                android:layout_height="33dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                android:text="Presión arterial alta"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/presionarterialalta"
                android:layout_width="73dp"
                android:layout_height="33dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                android:text="Diabetes"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/diabetes"
                android:layout_width="73dp"
                android:layout_height="33dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                android:text="Obstrucción de vaso sanguíneo"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/obstruccionvaso"
                android:layout_width="73dp"
                android:layout_height="33dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                android:text="Insuficiencia cardiaca"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/insuficienciacardiaca"
                android:layout_width="73dp"
                android:layout_height="33dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                android:text="Enfermedades hepáticas"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/enfermedadeshepaticas"
                android:layout_width="73dp"
                android:layout_height="33dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                android:text="Enfermedades renales"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/enfermedadesrenales"
                android:layout_width="73dp"
                android:layout_height="33dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                android:text="Tratamiento de cancer"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/cancer"
                android:layout_width="73dp"
                android:layout_height="33dp" />
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#6B0B11"
            android:onClick="calcularButton"
            android:text="Calcular"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>