<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarUsuarios">

    <include
        android:id="@+id/include4"
        layout="@layout/toolbarregistrarse" />

    <LinearLayout
        android:layout_width="386dp"
        android:layout_height="572dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/redondeado"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include4">

        <EditText
            android:id="@+id/username"
            style="@style/Campo_texto_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="20dp"
            android:hint="Nombre(s)"
            android:padding="8dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            android:paddingEnd="8dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/userlastname"
            style="@style/Campo_texto_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:hint="Apellido(s)"
            android:padding="8dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            android:paddingEnd="8dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/email"
            style="@style/Campo_texto_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            android:paddingEnd="8dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/password"
            style="@style/Campo_texto_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:hint="Contrase単a"
            android:inputType="textPassword"
            android:padding="8dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/password2"
            style="@style/Campo_texto_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:hint="Contrase単a"
            android:inputType="textPassword"
            android:padding="8dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:text="Fecha de nacimiento:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/linearlayoutFechaN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtDia"
                style="@style/Campo_texto_style"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_horizontal"
                android:hint="Dia"
                android:inputType="number"
                android:singleLine="true" />

            <EditText
                android:id="@+id/txtMes"
                style="@style/Campo_texto_style"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_horizontal"
                android:hint="Mes"
                android:inputType="number"
                android:singleLine="true" />

            <EditText
                android:id="@+id/txtA単o"
                style="@style/Campo_texto_style"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_horizontal"
                android:hint="A単o"
                android:inputType="number"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayoutGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:text="Sexo:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                app:endIconTint="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/sexo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    android:background="@drawable/rectangulo_bg_white"
                    android:inputType="none"
                    android:text="M/F" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnRegistrar"

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="22dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#6b0b11"
            android:gravity="center"
            android:onClick="registrar"
            android:text="Registrarse" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>