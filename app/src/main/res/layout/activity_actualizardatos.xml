<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarDatos">


    <include
        android:id="@+id/include5"
        layout="@layout/toolbaractualizardatos"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:id="@+id/LinearActulizarDat"
        android:layout_width="375dp"
        android:layout_height="440dp"
        android:layout_marginTop="36dp"

        android:background="@drawable/redondeado"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include5">

        <EditText
            android:id="@+id/username"
            style="@style/Campo_texto_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="20dp"
            android:hint="Nombre(s)"
            android:padding="8dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            android:paddingEnd="8dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/userlastname"
            style="@style/Campo_texto_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:hint="Apellido(s)"
            android:padding="8dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            android:paddingEnd="8dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/email"
            style="@style/Campo_texto_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            android:paddingEnd="8dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/password"
            style="@style/Campo_texto_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:hint="Contrase침a"
            android:inputType="textPassword"
            android:padding="8dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:text="Fecha de nacimiento:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/linearlayoutFechaN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtDia"
                style="@style/Campo_texto_style"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_horizontal"
                android:hint="Dia"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="gravity"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtMes"
                style="@style/Campo_texto_style"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_horizontal"
                android:hint="Mes"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtA침o"
                style="@style/Campo_texto_style"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_horizontal"
                android:hint="A침o"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="24sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnRegistrar"

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="22dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#6b0b11"
            android:gravity="center"
            android:onClick="registrarUsuario"
            android:text="Actualizar" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cerrarSesion"
        android:layout_width="339dp"
        android:layout_height="68dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/redondeado"
        android:onClick="cerrarSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearActulizarDat">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_person_off_24" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar sesi칩n"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>